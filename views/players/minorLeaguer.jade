mixin minorLeaguer(player, isTrade)
	include ../columns/vulture

	tr(class="player" _id=player._id)
		td(style="padding-left:8px")
			= player.position_txt
		td
			a.name(href="/player/" + player._id)= player.name_display_first_last
		-if(!isTrade)
			-var stats = player.stats[player.stats_index];
			td.center= player.team_abbrev
			td.right
				-if(player.primary_position != 1 && stats)
					= stats.ab
				-else
					| -
			td.right
				-if(player.primary_position == 1 && stats)
					= stats.ip
				-else
					| -
			td.center
				-if(player.team_id)
					= player.status_code
				-else
					| -
			td.extra.level
			td.extra.stat_ab
			td.extra.stat_hr
			td.extra.stat_r
			td.extra.stat_rbi
			td.extra.stat_sb
			td.extra.stat_obp
			td.extra.stat_w
			td.extra.stat_k
			td.extra.stat_whip
			td.extra.stat_era
			td.extra.stat_sv
			td.extra.stat_ip
			mixin vulture(player, {})
		
