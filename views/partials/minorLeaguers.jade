mixin minorLeaguers(players, team, config, displayConfig, isTrade)

	include player

	-displayConfig.minorLeaguerFormat = true;

	table.hoverable(id='minors_players_' + team.team style="width:100%;border-collapse:collapse;" 
		ondragover="allowDrop(event)" 
		ondrop="dropOutOfTrade(event)")
		thead
			th(style="width:30px") Pos.
			-if(isTrade)
				th(style="text-align:left") Name
			-else
				th.playerName Name
			-if(isTrade == undefined)
				th Team
				th AB
				th IP
			
				-displayConfig.showStatistics = false;
				-if(config.isKeeperPeriod)
					th.small= thisYearSalaryHeader
					-if(displayConfig.showFutureSalary)
						th.small= nextYear + " Salary"
					
					th.small= thisYearContractHeader
					-if(displayConfig.showFutureSalary)
						th.small= nextYear + " Contract Year"
					
					-if(displayConfig.showKeeperColumns)
						th.small Select As Keeper
				
				-if(displayConfig.showStatus)
					th.small(style="width:21%") MLB Status

		tbody
			-each player in players['minor_leaguers']
				-if(isTrade == undefined)
					mixin player(player, config, displayConfig)
				-else
					-var itemText = player.name_display_first_last;
					tr(id="" + team.teamId + "_" + player._id
						player_id=player._id
						player_name=player.name_display_first_last
						itemtext=itemText
						draggable="true"
						team=team.teamId
						ondragstart="dragPlayer(event)")
						td= player.position_txt
						td
							a.hiddenLink(href="/player/" + player._id target="_blank")= player.name_display_first_last
