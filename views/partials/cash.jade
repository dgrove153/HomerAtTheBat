mixin cash(team, cash, isTrade, config)

	table(id='finances_' + team.team)
		thead
			th(style="width:50px") Year
			th(style="width:80px") Type
			th Value
		tbody
			-var count = 0;
			-each c in cash
				-var thisYearHidden;
				-if(config.isOffseason && c.year == parseInt(config.year) + 1 && c.type == 'MLB')
					-c.value = team.preKeeperCash;
				tr
					-if(count % 2 == 0)
						td(rowspan="2" style="padding-left:12px")
							= c.year
							-count++;
					-else
						-count++;
					td
						= c.type
					td
						= c.value